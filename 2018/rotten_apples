#include <iostream>
using namespace std;

int main() {
    int N, T, M;
    cin >> N >> T >> M;

    int p1, p2, p3;
    cin >> p1 >> p2;
    if (M == 3) cin >> p3;

    // изчисляваме интервалите
    int l1 = p1 - T; if (l1 < 1) l1 = 1;
    int r1 = p1 + T; if (r1 > N) r1 = N;

    int l2 = p2 - T; if (l2 < 1) l2 = 1;
    int r2 = p2 + T; if (r2 > N) r2 = N;

    int l3 = 0, r3 = -1;
    if (M == 3) {
        l3 = p3 - T; if (l3 < 1) l3 = 1;
        r3 = p3 + T; if (r3 > N) r3 = N;
    }

    // сортиране на интервалите по l (на ръка, защото M ≤ 3)
    if (M == 2) {
        if (l1 > l2) { swap(l1, l2); swap(r1, r2); }
    } else {
        // 3 интервала – сортираме с няколко if-а
        if (l1 > l2) { swap(l1, l2); swap(r1, r2); }
        if (l2 > l3) { swap(l2, l3); swap(r2, r3); }
        if (l1 > l2) { swap(l1, l2); swap(r1, r2); }
    }

    // слепване на интервалите
    int rotten = 0;
    int cl = l1, cr = r1;

    if (M >= 2) {
        if (l2 <= cr) {
            if (r2 > cr) cr = r2;
        } else {
            rotten += cr - cl + 1;
            cl = l2; cr = r2;
        }
    }
    if (M == 3) {
        if (l3 <= cr) {
            if (r3 > cr) cr = r3;
        } else {
            rotten += cr - cl + 1;
            cl = l3; cr = r3;
        }
    }
    rotten += cr - cl + 1;

    cout << N - rotten << endl;
}
